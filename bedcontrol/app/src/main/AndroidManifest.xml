<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.iclario.bedcontrol">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="fr.iclario.bedcontrol.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.iclario.bedcontrol.activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="fr.iclario.bedcontrol.activity.MainActivity" />
        <activity
            android:name="fr.iclario.bedcontrol.activity.ColorPickerActivity"
            android:label="@string/title_activity_color_picker"
            android:parentActivityName="fr.iclario.bedcontrol.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.iclario.bedcontrol.activity.MainActivity" />
        </activity>
    </application>

</manifest>